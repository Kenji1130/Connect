# platform :ios, '9.0'

target 'Connect' do
  # Uncomment the next line if you're using Swift or would like to use dynamic frameworks
  use_frameworks!

  # Pods for Connect
  pod 'Firebase/Core'
  pod 'Firebase/Database'
  pod 'Fabric'
  pod 'Digits'
  pod 'TwitterKit'
  pod 'PinterestSDK', :git => 'git@github.com:pinterest/ios-pdk.git'
  pod 'MBProgressHUD'
  pod 'SDWebImage'
  pod 'UIActivityIndicator-for-SDWebImage'

  target 'ConnectTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'ConnectUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
